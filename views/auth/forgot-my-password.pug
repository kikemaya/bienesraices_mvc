extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal State
        h2.text-center.text-2xl.font-extrabold= page

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Your email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="text" name="email")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/register") You do not have an account? Create one
                        a.text-gray-500.text-xs(href="/auth/login") Do you have an account? Sign in
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Send instructions")